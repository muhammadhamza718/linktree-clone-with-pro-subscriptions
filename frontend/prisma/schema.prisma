// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  emailVerified DateTime?
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  profile       Profile?
  themes        Theme[]  // User has many themes (one-to-many relation)
}

model Profile {
  id            String   @id @default(cuid())
  userId        String   @unique
  username      String   @unique // 3-30 chars, alphanumeric + hyphens
  displayName   String
  bio           String?  // max 280 chars
  avatar        String?
  avatarLayout  String?  @default("classic") // 'classic', 'hero'
  title         String?
  themeId       String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  links         Link[]
  theme         Theme?   @relation(fields: [themeId], references: [id])

  // NEW RELATIONSHIPS FOR PRO FEATURES
  customDomain  CustomDomain? // One-to-one relationship with custom domain
  analyticsEvents AnalyticsEvent[] // Profile has many analytics events
  richContentBlocks RichContentBlock[] // Profile has many rich content blocks
  customCss     CustomCSS[] // Profile has many custom CSS entries
  contactSubmissions ContactSubmission[] // Profile has many contact submissions
}

model Link {
  id         String   @id @default(cuid())
  profileId  String
  title      String   // required
  url        String   // required, validated URL
  linkType   String?  // 'social', 'website', 'project', 'email', 'phone', 'embed', 'custom'
  thumbnail  String?
  icon       String?
  order      Int      // required, for sorting
  isVisible  Boolean  @default(true)
  isFeatured Boolean  @default(false)
  githubRepo String?  // for GitHub integration
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  profile    Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  analyticsEvents AnalyticsEvent[] // Link has many analytics events (one-to-many)

  // NEW FIELDS FOR PRO FEATURES (Task T004, T038)
  startDate      DateTime?  // for scheduling
  endDate        DateTime?  // for scheduling
  timezone       String?    // for timezone-aware scheduling
  passwordHash   String?    // for password protection
  isAgeGated     Boolean    @default(false) // for age-gating
  isPinned       Boolean    @default(false) // for link pinning
}

model Theme {
  id           String   @id @default(cuid())
  name         String   // required
  userId       String?
  presetName   String?  // for predefined themes
  backgroundColor String?
  textColor    String?
  linkColor    String?
  buttonStyle  String?  @default("rounded") // 'rounded', 'square', 'pill'
  buttonColor  String?  @default("solid")   // 'solid', 'gradient', 'glass'
  fontFamily   String?
  fontSize     String?
  isLightMode  Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User?    @relation(fields: [userId], references: [id], onDelete: SetNull, map: "themes_user_fkey")
  profiles     Profile[]
}

model AnalyticsEvent {
  id        String   @id @default(cuid())
  profileId String?
  linkId    String?
  eventType String   // 'profile_view', 'link_click'
  ipAddress String?
  userAgent String?
  referrer  String?
  timestamp DateTime @default(now())
  profile   Profile? @relation(fields: [profileId], references: [id], onDelete: Cascade, map: "analytics_profile_fkey")
  link      Link?    @relation(fields: [linkId], references: [id], onDelete: Cascade, map: "analytics_link_fkey")

  // NEW FIELDS FOR ADVANCED ANALYTICS (Task T006)
  country       String?  // from IP geolocation
  city          String?  // from IP geolocation
  deviceType    String?  // 'mobile', 'tablet', 'desktop'
  browser       String?  // browser name
  os            String?  // operating system
  timezoneOffset Int?    // for timezone tracking
}

// NEW MODEL FOR PRO FEATURES (Task T005)
model CustomDomain {
  id            String   @id @default(cuid())
  profileId     String   @unique
  domain        String   @unique // e.g., mybrand.com
  verifyToken   String   // for DNS verification
  isVerified    Boolean  @default(false)
  sslEnabled    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  profile       Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

// NEW MODEL FOR PRO FEATURES (Task T007)
model RichContentBlock {
  id            String   @id @default(cuid())
  profileId     String
  contentType   String   // 'embed', 'text', 'form', 'gallery'
  content       String   // the actual content - embed code, text, form fields
  title         String?  // for identification
  position      Int      // for ordering
  isVisible     Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  profile       Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

// NEW MODEL FOR PRO FEATURES (Task T008)
model CustomCSS {
  id            String   @id @default(cuid())
  profileId     String
  cssCode       String   // the custom CSS
  isLive        Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  profile       Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

// NEW MODEL FOR PRO FEATURES (Task T009)
model ContactSubmission {
  id            String   @id @default(cuid())
  profileId     String
  formId        String?  // to identify which form
  name          String?  // submitter name
  email         String?  // submitter email
  message       String?  // the message content
  submittedAt   DateTime @default(now())
  profile       Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

// NEW MODELS FOR ADVANCED PRO FEATURES (Phase 1: Database Schema & Models)

// WebhookEndpoint: Stores user-configured webhook endpoints for external integrations
model WebhookEndpoint {
  id            String   @id @default(cuid())
  userId        String
  url           String   // Webhook endpoint URL
  events        String[] // Events to trigger on (stored as JSON array)
  secret        String   // HMAC secret for signature verification
  isActive      Boolean  @default(true)
  retryCount    Int      @default(0)
  lastTriggered DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  deliveries    WebhookDelivery[]
}

// WebhookDelivery: Records of webhook delivery attempts with status and response
model WebhookDelivery {
  id           String   @id @default(cuid())
  webhookId    String
  payload      Json     // Webhook payload data
  statusCode   Int?     // Response status from webhook endpoint
  response     String?  // Response body from webhook endpoint
  attemptCount Int      @default(0)
  status       String   // 'pending', 'success', 'failed'
  deliveredAt  DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  webhook      WebhookEndpoint @relation(fields: [webhookId], references: [id], onDelete: Cascade)
}

// LinkVariant: Alternative versions of the same link for A/B testing
model LinkVariant {
  id                    String   @id @default(cuid())
  linkId                String
  variantName           String   // Name of this variant
  title                 String   // Different title for A/B testing
  iconUrl               String?  // Different icon for A/B testing
  description           String?  // Different description for A/B testing
  trafficSplitPercent   Int      // Percentage of traffic to this variant (0-100)
  clickCount            Int      @default(0) // Track clicks for statistical analysis
  viewCount             Int      @default(0) // Track views for CTR calculation
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Relations
  link                  Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  abTest                ABTest?
}

// ABTest: A/B test configuration with traffic split ratios and statistical data
model ABTest {
  id             String        @id @default(cuid())
  userId         String
  testName       String        // Name of the A/B test
  status         String        // 'draft', 'running', 'paused', 'completed'
  winnerVariantId String?      // ID of winning variant (when test is completed)
  startedAt      DateTime?
  endedAt        DateTime?
  confidenceLevel Float?       // Statistical confidence level
  sampleSize     Int          @default(0) // Number of samples collected
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  // Relations
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  variants       LinkVariant[]
  winnerVariant  LinkVariant? @relation(fields: [winnerVariantId], references: [id], onDelete: SetNull)
}

// TeamMember: Team member invitation and access record with role and permissions
model TeamMember {
  id          String   @id @default(cuid())
  profileId   String
  userId      String   // ID of the invited team member
  role        String   // 'owner', 'editor', 'viewer'
  invitedBy   String   // ID of user who sent invitation
  invitedAt   DateTime @default(now())
  acceptedAt  DateTime?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  invitedByUser User   @relation("InvitedByRelation", fields: [invitedBy], references: [id], onDelete: Restrict)
}

// ActivityLog: Audit trail of all profile changes with user, action, and timestamp
model ActivityLog {
  id          String   @id @default(cuid())
  profileId   String
  userId      String?  // User who made the change (nullable for system actions)
  action      String   // Action performed (create, update, delete, invite, etc.)
  entityType  String   // Type of entity (link, profile, theme, webhook, etc.)
  entityId    String   // ID of the entity affected
  changes     Json?    // JSON of what changed
  ipAddress   String?  // IP address of the user (hashed for privacy)
  userAgent   String?  // User agent of the user
  timestamp   DateTime @default(now())
  createdAt   DateTime @default(now())

  // Relations
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}

// BrandKitAsset: Shared brand assets (colors, logos, media) accessible to team members
model BrandKitAsset {
  id          String   @id @default(cuid())
  profileId   String
  assetType   String   // 'color_palette', 'logo', 'media', 'font', etc.
  assetUrl    String   // URL to the asset
  assetName   String   // Display name for the asset
  isShared    Boolean  @default(true) // Whether this is shared with team
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  creator     User     @relation(fields: [createdBy], references: [id], onDelete: Cascade)
}